# Production Environment Configuration
# Copy this file to .env and update with your production values

APP_NAME="Your App Name"
APP_ENV=production
APP_KEY=base64:YOUR_32_CHARACTER_KEY_HERE
APP_DEBUG=false
APP_URL=https://yourdomain.com

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file

BCRYPT_ROUNDS=12

# Logging - Use 'daily' or 'stack' for production
LOG_CHANNEL=stack
LOG_STACK=daily
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# Database Configuration
DB_CONNECTION=mariadb
DB_HOST=your-db-host.com
DB_PORT=3306
DB_DATABASE=production_db
DB_USERNAME=production_user
DB_PASSWORD=STRONG_PASSWORD_HERE

# Session Configuration - Use Redis for production
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=.yourdomain.com
SESSION_SECURE_COOKIE=true
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=strict

# Broadcasting & Storage
BROADCAST_CONNECTION=log
FILESYSTEM_DISK=public
QUEUE_CONNECTION=redis

# Cache Configuration - Use Redis for production
CACHE_STORE=redis
CACHE_PREFIX=alcaofficial_cache

# Redis Configuration
REDIS_CLIENT=phpredis
REDIS_HOST=your-redis-host.com
REDIS_PASSWORD=REDIS_PASSWORD_HERE
REDIS_PORT=6379
REDIS_DB=0
REDIS_CACHE_DB=1
REDIS_QUEUE_DB=2

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=your-username
MAIL_PASSWORD=your-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@yourdomain.com"
MAIL_FROM_NAME="${APP_NAME}"

# AWS S3 (Optional - for file storage)
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_DEFAULT_REGION=us-east-1
# AWS_BUCKET=
# AWS_USE_PATH_STYLE_ENDPOINT=false

# Rate Limiting Configuration
STARTERKIT_RATE_LIMIT_PUBLIC=60
STARTERKIT_RATE_LIMIT_CONTENT_WRITE=10
STARTERKIT_RATE_LIMIT_COMMENTS=20
STARTERKIT_RATE_LIMIT_LOGIN=5

# Cache TTL Configuration (in seconds)
STARTERKIT_CACHE_PAGES_TTL=600
STARTERKIT_CACHE_SETTINGS_TTL=300

# API Configuration
API_RESPONSE_CACHE_ENABLED=true
API_RESPONSE_CACHE_TTL=600

# Security Headers
SECURITY_HEADERS_ENABLED=true

# Error Tracking - Sentry (Recommended for production)
# SENTRY_LARAVEL_DSN=https://xxxxx@sentry.io/xxxxx
# SENTRY_TRACES_SAMPLE_RATE=0.1
# SENTRY_ENVIRONMENT=production

# Performance Monitoring
TELESCOPE_ENABLED=false
DEBUGBAR_ENABLED=false

# Backup Configuration
BACKUP_SCHEDULE_ENABLED=true
BACKUP_SCHEDULE_FREQUENCY=daily
BACKUP_SCHEDULE_TIME=02:00
BACKUP_DEFAULT_FORMAT=json

VITE_APP_NAME="${APP_NAME}"
